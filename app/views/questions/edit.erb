<form action="/questions/<%=question.id%>" method="POST" id="questionform">
  <input type="hidden" name="_method" value="PUT">
<label for="title">Title</label>
<input type="text" name="title" value=<%= question.try(:title) %>>
<textarea rows="10" cols="50" name="body" form="questionform" ><%= question.try(:body) %></textarea>
<input type="submit" value="Edit question">
</form>

